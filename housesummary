QUESTION 18 import pandas as pd

# Load dataset
df = pd.read_csv("C:\\Users\\hp\\Downloads\\Datasets\\Datasets\\House Data.csv")

# Display column names
print("\nAvailable Columns in Dataset:\n")
print(df.columns)

# Identify categorical and numeric (quantitative) columns
categorical_columns = df.select_dtypes(include=['object']).columns
numeric_columns = df.select_dtypes(include=['int64', 'float64']).columns

print("\nCategorical Variables:", list(categorical_columns))
print("Numeric Variables:", list(numeric_columns))

# Compute summary statistics: group each numeric column by each categorical column
for cat in categorical_columns:
    print(f"\n\nSummary Statistics Grouped by '{cat}':\n")
    grouped_stats = df.groupby(cat)[numeric_columns].agg(['mean', 'median', 'min', 'max', 'std'])
    print(grouped_stats)
