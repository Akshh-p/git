QUESTION 9 import math

# -------------------------------------------------------------
# FUNCTION TO COMPUTE EUCLIDEAN DISTANCE
# -------------------------------------------------------------
def dist(a, b):
    return math.sqrt((a[0] - b[0])*2 + (a[1] - b[1])*2)

# -------------------------------------------------------------
# GIVEN POINTS
# -------------------------------------------------------------
P = {
    "P1": [0.1, 0.6],
    "P2": [0.15, 0.71],
    "P3": [0.08, 0.9],
    "P4": [0.16, 0.85],
    "P5": [0.2, 0.3],
    "P6": [0.25, 0.5],
    "P7": [0.24, 0.1],
    "P8": [0.3, 0.2]
}

# -------------------------------------------------------------
# INITIAL CENTROIDS
# -------------------------------------------------------------
m1 = P["P1"]  # Cluster C1
m2 = P["P8"]  # Cluster C2

# -------------------------------------------------------------
# ASSIGN POINTS TO CLUSTERS
# -------------------------------------------------------------
C1 = []
C2 = []

for key, point in P.items():
    d1 = dist(point, m1)
    d2 = dist(point, m2)

    if d1 < d2:
        C1.append(key)
    else:
        C2.append(key)

# -------------------------------------------------------------
# COMPUTE UPDATED CENTROIDS
# -------------------------------------------------------------
def compute_centroid(cluster_points):
    x = sum(P[p][0] for p in cluster_points) / len(cluster_points)
    y = sum(P[p][1] for p in cluster_points) / len(cluster_points)
    return [x, y]

new_m1 = compute_centroid(C1)
new_m2 = compute_centroid(C2)

# -------------------------------------------------------------
# OUTPUT
# -------------------------------------------------------------
print("Cluster C1 contains:", C1)
print("Cluster C2 contains:", C2)

print("P6 belongs to:", "C1" if "P6" in C1 else "C2")
print("Population of cluster around m2 (C2):", len(C2))

print("Updated m1:", new_m1)
print("Updated m2:", new_m2)
